[{{ php_fpm_pool }}]
user = {{ site_user }}
group = {{ site_group }}

listen = {{ php_fpm_socket }}
listen.acl_users = apache,nginx
listen.allowed_clients = 127.0.0.1
listen.mode = 0660

pm = ondemand
pm.max_children = 10
pm.process_idle_timeout = 10s
pm.max_requests = 500

chdir = {{ deploy_root }}

php_admin_value[error_log] = /var/log/php-fpm/{{ php_fpm_pool }}.log
php_admin_flag[log_errors] = on
php_value[session.save_handler] = files
php_value[session.save_path] = /home/{{ site_user }}/prod/shared/sessions